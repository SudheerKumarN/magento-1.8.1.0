<config>
    <modules>
        <Ct_SetBackground>
            <version>0.1.3</version>
        </Ct_SetBackground>
    </modules>
    
    <frontend>
        <routers>
            <setbackground>
                <use>standard</use>
                <args>
                    <module>Ct_SetBackground</module>
                    <frontName>setbackground</frontName>
                </args>
            </setbackground>
        </routers>
        <layout>
            <updates>
                <setbackground>
                    <file>ct/setbackground.xml</file>
                </setbackground>
            </updates>
        </layout>
    </frontend>
    
    <admin>
        <routers>
            <setbackground>
                <use>admin</use>
                <args>
                    <module>Ct_SetBackground</module>
                    <frontName>setbackground</frontName>
                </args>
            </setbackground>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <setbackground module="setbackground">
                <title>Set Background</title>
                <sort_order>91</sort_order>             
                <children>
                    <backgrounditems module="setbackground">
                        <title>Manage SetBackground Items</title>
                        <sort_order>10</sort_order>
                        <action>setbackground/adminhtml_backgrounditem</action>
                    </backgrounditems>
                </children>
            </setbackground>
        </menu>
        
        <layout>
            <updates>
                <setbackground>
                    <file>setbackground.xml</file>
                </setbackground>
            </updates>
        </layout>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Ct_SetBackground.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
    </adminhtml>  
     
    <global>
        
        <models>
            <setbackground>
                <class>Ct_SetBackground_Model</class>
                <resourceModel>setbackground_mysql4</resourceModel>
            </setbackground>
            
            <setbackground_mysql4>
                <class>Ct_SetBackground_Model_Mysql4</class>                
                <entities>
                    <backgrounditem>
                        <table>set_background_item</table>
                    </backgrounditem>
                </entities>
            </setbackground_mysql4>
        </models>
        
        <resources>
            <setbackground_setup>
                <setup>
                    <module>Ct_SetBackground</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </setbackground_setup>
            <setbackground_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </setbackground_write>
            <setbackground_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </setbackground_read>
        </resources>
        
        <blocks>
            <setbackground>
                <class>Ct_SetBackground_Block</class>
            </setbackground>
        </blocks>
        
        <helpers>
            <setbackground>
                <class>Ct_SetBackground_Helper</class>
            </setbackground>
        </helpers>
        
    </global>
    
    <default>
        <setbackground>
            <info>
                <enabled>1</enabled>
            </info>
            <image>
                <z-index>1</z-index>
            </image>
        </setbackground>
    </default>
</config>